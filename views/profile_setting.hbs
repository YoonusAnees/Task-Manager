    <script>
  const form = $("form");

  form.on("submit", (e) => {
    e.preventDefault();
    updateUser();
  });




  const updateUser = async () => {
  const url = "/api/users";
  const file = document.querySelector("#profile").files[0];
  const formData = new FormData();

  formData.append("name", $("#name").val());
  formData.append("email", $("#email").val());
  formData.append("age", $("#age").val());
  formData.append("password", $("#password").val());
  if (file) formData.append("profile", file);

  const initialContent = $(".btn-update").html();
  showLoader(".btn-update", initialContent);

  try {
    const response = await fetch(url, {
      method: "PATCH",
      body: formData,
    });

    const user = await response.json();
    if (user.error) return ShowError(user.error);

    $(".profile-image").attr("src", "/images/uploads/" + user.imagePath);
    $(".profile-big-image").attr("src", "/images/uploads/" + user.imagePath);
    $("#username").text(user.name);
    showSuccess("Profile Updated Successfully");
  } catch (e) {
    ShowError("An error occurred while updating the profile.");
  } finally {
    hideLoader(".btn-update", initialContent);
  }
};

</script>


